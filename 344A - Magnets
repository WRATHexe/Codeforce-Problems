#include<iostream>
#include<string.h>
using namespace std;
int main(){

int n,p,count =1;
cin>>n;
int a[n];

for(int i=0;i<n;i++)
{
   cin>>a[i];
}
p=a[0];
    for(int i=0;i<n;i++)
    {
        if(p!=a[i])
        {
             count++;
             p=a[i];
        }
    }
    cout<<count<<endl;
}
