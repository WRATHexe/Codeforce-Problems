#include<iostream>
#include<string.h>
using namespace std;
int main(){

int n,t;
cin>>n>>t;
string s;
cin>>s;
for(int i=0;i<n;i++)
    {
       if(s[i]=='B')
        for(int j=0;j<t;j++)
       {
          if(s[i+1]=='G')
            {
                char k =s[i];
                s[i]=s[i+1];
                s[i+1]=k;
                i++;
            }
       }
    }
    cout<<s<<endl;
}
